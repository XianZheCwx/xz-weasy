{
  "compilerOptions": {
//     "target": "ES2017",
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "lib": ["DOM", "ScriptHost", "ES2015", "ES2016", "ES2017", "ES2019.Array"],
    "incremental": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "alwaysStrict": true,
    "removeComments": true
    // "listFiles": true
  },
  "include": [
    "./src"
  ],
  "exclude": ["./dist", "./lib", "./test", "./bin"]
}

